<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nametv"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nametv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/phonetv"
        android:layout_width="83dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nametv"
        android:layout_marginTop="62dp"
        android:text="Phone"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phoneet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameet"
        android:layout_below="@+id/nametv"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/emailtv"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nametv"
        android:layout_marginTop="106dp"
        android:text="Email"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameet"
        android:layout_below="@+id/phonetv"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/state"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/statetv"
        android:layout_alignStart="@+id/nameet" />

    <TextView
        android:id="@+id/statetv"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nametv"
        android:layout_marginTop="144dp"
        android:text="State"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/citytv"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nametv"
        android:layout_marginTop="180dp"
        android:text="City"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/city"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameet"
        android:layout_alignTop="@+id/citytv" />

    <Button
        android:id="@+id/submitb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="Submit"
        android:textStyle="bold" />
</android.widget.RelativeLayout>